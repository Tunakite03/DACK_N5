				{
					"name": "Order A Book Is Out of Stock",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const reqObject = {\r",
									"    url: \"http://localhost:8000/products\",\r",
									"    method: \"GET\",\r",
									"    header: \"Content-Type:application/json\"\r",
									"};\r",
									"pm.sendRequest(reqObject, function (err, res) {\r",
									"    const responseJson = res.json();\r",
									"    for (let i = 0; i < responseJson.length; i++) {\r",
									"        if (!responseJson[i].available) {\r",
									"            pm.collectionVariables.set(\"productIdOfStock\", responseJson[i].id);\r",
									"            break;\r",
									"        }\r",
									"    }\r",
									"});"
								],
								"type": "text/javascript"
							}
